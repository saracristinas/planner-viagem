generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int      @id @default(autoincrement())
  name           String
  email          String   @unique
  password       String
  emergencyFund  Float    @default(0)
  trips          Trip[]
  operations     FinancialOperation[]
  createdAt      DateTime @default(now())
}

model Trip {
  id                 Int      @id @default(autoincrement())
  title              String
  destination        String
  startDate          DateTime
  endDate            DateTime
  budget             Float?
  emergencyFund      Float    @default(0)
  usedEmergencyFund  Float    @default(0)
  userId             Int
  user               User     @relation(fields: [userId], references: [id])
  expenses           Expense[]
  operations         FinancialOperation[]
  createdAt          DateTime @default(now())
}

model Expense {
  id        Int      @id @default(autoincrement())
  description String
  amount    Float
  category  String
  date      DateTime
  tripId    Int
  trip      Trip     @relation(fields: [tripId], references: [id])
}

model FinancialOperation {
  id            Int      @id @default(autoincrement())
  type          String   // EMERGENCY_USAGE
  tripId        Int
  userId        Int
  amountTrip    Float    @default(0)
  amountGlobal  Float    @default(0)
  totalAmount   Float
  createdAt     DateTime @default(now())

  trip          Trip     @relation(fields: [tripId], references: [id])
  user          User     @relation(fields: [userId], references: [id])
}